# =============================
# Foundry connection (bridge client -> local proxy)
# =============================
# Point sync client to the local proxy endpoint.
FOUNDRY_BASE_URL=http://127.0.0.1:8788
FOUNDRY_API_TOKEN=replace_with_foundry_api_token
FOUNDRY_BRIDGE_TOKEN=replace_with_bridge_token
FOUNDRY_REQUEST_TIMEOUT_MS=30000
# Auto-manage local proxy lifecycle for sync preview/apply.
FOUNDRY_AUTO_PROXY=1
FOUNDRY_AUTO_PROXY_START_TIMEOUT_MS=30000
FOUNDRY_AUTO_PROXY_POLL_INTERVAL_MS=750

# =============================
# Foundry proxy (proxy -> running Foundry world via Socket.IO)
# =============================
FOUNDRY_PROXY_HOST=127.0.0.1
FOUNDRY_PROXY_PORT=8788
FOUNDRY_PROXY_TIMEOUT_MS=15000
FOUNDRY_SITE_URL=http://192.168.1.105:30000
FOUNDRY_WORLD=replace_with_world_id_or_slug
# Session cookie value from logged-in Foundry browser (cookie name is "session").
FOUNDRY_SESSION_COOKIE=replace_with_foundry_session_cookie
FOUNDRY_SOCKET_EVENT=module.music-madness-bridge

# =============================
# Notion credentials and Story Bible scope
# =============================
NOTION_API_KEY=secret_xxx
NOTION_STORY_BIBLE_PAGE_ID=309a4a2517698142aac9d83c99841cbd
# Optional legacy database settings (not required for wiki-page sync mode):
NOTION_ALLOWED_DATABASE_IDS=
NOTION_DEFAULT_TARGET_DB_ID=
NOTION_TITLE_PROPERTY=Title

# =============================
# Local bridge storage/runtime
# =============================
BRIDGE_DATA_DIR=./data
BRIDGE_HOST=127.0.0.1
BRIDGE_PORT=8788

# Optional public URL for copied media references (if omitted, absolute local file paths are stored)
# MEDIA_PUBLIC_BASE_URL=https://your-static-media-host.example.com/music-madness

SYNC_RATE_LIMIT_MS=200
LOG_LEVEL=info
